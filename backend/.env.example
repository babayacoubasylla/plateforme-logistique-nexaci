# Backend environment variables (copy to .env or set in Railway)

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/nexaci?retryWrites=true&w=majority

# JWT secret for auth
JWT_SECRET=please-change-me-to-a-very-long-random-string

# PORT for server (Railway will inject PORT)
PORT=5000

# Optional: Twilio WhatsApp
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# CORS allowed origins (comma separated). If unset, defaults configured in app.
CORS_ORIGINS=
